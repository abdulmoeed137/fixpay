<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/keyboard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1.0"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/mainColor">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
                            android:id="@+id/signUpTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign Up"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="20sp"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/header_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2.0"
                android:gravity="center"
                android:layout_weight="0.1"
                android:padding="5dp"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:gravity="top"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:background="#8f8f8f"
                            android:cursorVisible="true"
                            android:enabled="false"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="+92"
                            android:textColor="@color/cardview_light_background"
                            android:textColorHint="#8f8f8f"
                            android:textCursorDrawable="@color/app_edit_text_cursor" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#00000000"
                            android:cursorVisible="true"
                            android:hint="3xx*"
                            android:inputType="number"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="#8f8f8f"
                            android:textColorHint="#8f8f8f"
                            android:textCursorDrawable="@color/app_edit_text_cursor" />


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#d8d8d8"/>
                    <Button
                        android:id="@+id/send_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_login_rectangle"
                        android:text="Send Confirmation Code"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"/>
                    <LinearLayout
                        android:id="@+id/code_layout"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">  <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#d8d8d8"/>

                        <EditText
                            android:id="@+id/code"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#00000000"
                            android:hint="Confirmation Code"
                            android:inputType="number"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="#8f8f8f"
                            android:textColorHint="#8f8f8f"
                            android:textCursorDrawable="@drawable/cursor_color" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#d8d8d8"/>
                        <Button
                            android:id="@+id/verify_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_login_rectangle"
                            android:text="Verify"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"/></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/all_fields"
                        android:visibility="gone">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#d8d8d8"/>
                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:inputType="textCapWords|textCapSentences"
                            android:background="#00000000"
                            android:hint="Name*"
                            android:textColor="#8f8f8f"
                            android:textColorHint="#8f8f8f"
                            android:paddingLeft="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:singleLine="true"/>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#d8d8d8"/>
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:inputType="textEmailAddress"
                            android:background="#00000000"
                            android:hint="Email"
                            android:textColor="#8f8f8f"
                            android:textColorHint="#8f8f8f"
                            android:paddingLeft="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"/>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#d8d8d8"/>

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:inputType="textPassword"
                            android:background="#00000000"
                            android:hint="Password"
                            android:textColor="#8f8f8f"
                            android:textColorHint="#8f8f8f"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:singleLine="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#d8d8d8"
                            android:layout_marginBottom="10dp"/>

                        <EditText
                            android:id="@+id/transaction_password"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginTop="5dp"
                            android:background="#00000000"
                            android:hint="Transaction Password"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="#8f8f8f"
                            android:textColorHint="#8f8f8f" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#d8d8d8"
                            android:layout_marginBottom="10dp"/>

                        <Button
                            android:id="@+id/signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_login_rectangle"
                            android:text="Sign Up"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/pbar"
            style="?android:attr/progressBarStyle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>