<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/keyboard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.91"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/mainColor">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
                    android:id="@+id/signUpTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Fund Withdrawl"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/header_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2.0"
        android:gravity="center"
        android:layout_weight="0.1"
        android:padding="5dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="top"
        android:layout_marginTop="20dp"
        android:layout_weight="1.0">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
<fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:text="Request Withdrawl"
    android:textSize="24dp"
    android:textColor="@color/mainColor"/>

    <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="9dp"
        android:text="  (Bank Charges Apply)*"/>

</LinearLayout>
        <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can only withdraw funds from the Universal Account.\nIt can take up to 48 hours"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="9dp">
           <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Universal Amount in Rs:  "
               android:textSize="16dp"/>
           <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"
               android:id="@+id/c_amount"
               android:textSize="30dp"
               android:textColor="@color/red"/>
       </LinearLayout>


        <EditText
            android:id="@+id/amount"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:textSize="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Bank Name with Branch"
            android:id="@+id/bank_name"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Account Title"
            android:id="@+id/acc_title"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Account Number"
            android:id="@+id/acc_number"
            android:textSize="15dp"
            />
        <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_rectangle"
                android:text="Request Withdrawl"
                android:layout_marginTop="5dp"
                android:textSize="15sp"/>
    </LinearLayout>
    </LinearLayout>
  </LinearLayout>

    </RelativeLayout>

</LinearLayout>