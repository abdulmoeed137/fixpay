<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >




        <android.support.v7.widget.CardView
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <LinearLayout

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true">


                    <ImageView
                        android:id="@+id/minus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/minuss" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/view3"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:elevation="12dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="50dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/mainn"

                                ></de.hdodenhof.circleimageview.CircleImageView>

                        </android.support.v7.widget.CardView>


                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/naina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_toRightOf="@+id/view3"
                    android:orientation="vertical">

                    <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
                        android:id="@+id/menu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Flour"
                        android:textColor="@color/colorGrayDarkMore"
                        android:textSize="18sp" />

                    <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
                        android:id="@+id/menu_desc"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/naina"

                        android:text="White Flour"
                        android:textColor="@color/colorGrayMiddle"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs: "
                            android:textColor="@color/colorGrayMiddle"
                            android:textSize="23sp" />
                        <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/naina"
                            android:text="23"
                            android:textColor="@color/colorGrayMiddle"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CashBack: "
                            android:textColor="@color/red_light"
                            android:textSize="20sp" />
                        <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
                            android:id="@+id/cashback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textColor="@color/colorGrayMiddle"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>