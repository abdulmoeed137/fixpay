<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:background="@color/mainColor"
        android:orientation="horizontal">



        <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
            android:id="@+id/captureTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cart Item"

            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/header_line"/>

    <RelativeLayout
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/uplist"
        android:padding="6dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/pbar"
            android:visibility="gone"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView2"
            android:layout_alignParentTop="true"
            >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_light"
        android:gravity="center_vertical"
        android:padding="5dp">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="Amount : "
        android:textColor="@color/QRCodeBlackColor"
        android:textSize="20sp" />
        <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="0.0"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="20sp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Cashback : "
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="20sp" />
            <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
                android:id="@+id/total_cashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="0.0"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <fixmoney.fixshix.com.fixshixmoney.CustomBoldTextView
            android:id="@+id/place_order"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:padding="15dp"
            android:text="Place Your Order"
            android:textColor="@color/white"
            android:textSize="20sp" />
</LinearLayout>